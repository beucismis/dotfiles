bindsym	$mod+Shift+e exec swaynag -t warning -m "What do you want to do?" -b "Poweroff" "systemctl poweroff" -b "Reboot" "systemctl reboot"

# Auto Start

exec_always {
    import-gsettings.sh

    mako
	kdeconnectd
    nm-applet --indicator
    #walker --gapplication-service
    rm -f $wobsock && mkfifo $wobsock && tail -f $wobsock | wob
	dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK
}

include /etc/sway/config-vars.d/*
