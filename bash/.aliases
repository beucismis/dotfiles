#!/bin/bash

# Navigation

alias ..='cd ..'
alias ...='cd ../../'

# Listining

alias ls='eza -F --git'
alias l='eza -laF --git'
alias ld='eza -ld --git */'
alias lt='eza --tree --level=2'

# Shortcut

alias s='sudo '
alias c='clear'
alias icat='viu'
alias catmd='glow'
alias m='mousepad'
alias reload='source $HOME/.bash_profile'

# System default

alias df='df -H'
alias rm='rm -I'
alias ports='ss -tuln'
alias mkdir='mkdir -pv'
alias untar='tar -zxvf '
alias du='du -h --max-depth=1'
alias psgrep='ps aux | grep -v grep | grep'
alias failed-units='systemctl list-units --state failed'

# Package managment

alias cleanup='pacc && paco'
alias pacr='sudo pacman -Rns'
alias pacc='sudo pacman -Scc'
alias pacu='sudo pacman -Syuu'
alias paru-stats='paru --show --stats'
alias paco='pacman -Qdtq | sudo pacman -Rns -'
alias pipu='python3 -m pip install --upgrade pip'

# Wayland

alias wlcopy='wl-copy'
alias wlpaste='wl-paste'
alias swayreload='swaymsg reload'
alias swaytree='swaymsg -t get_tree'
alias swaylog='sway -d 2> ~/sway.log'

# Misc

alias hgrep='history | grep'
alias myip='curl -s ifconfig.me'
alias cameratest='ffplay /dev/video0'

# Development

alias g='git'
alias gcb='git checkout -b'
alias gpull='git pull --rebase'
alias gpush='git push --force-with-lease'
alias glog="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"

alias pyvenv='python3 -m venv .venv && source .venv/bin/activate'

alias dotfiles="git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME"
