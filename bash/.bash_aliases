#!/bin/bash

# Shortcuts

alias g="git"
alias _="sudo"
alias c="clear"
alias rr="rm -rf"

# Directory listing/traversal

alias l="ls -la"
alias ld="ls -ld */"
alias ls="ls --color=auto"

alias ..="cd .."
alias -- -="cd -"
alias ...="cd ../.."
alias ....="cd ../../.."

# Package managers

alias pipu="/usr/bin/python3 -m pip install --upgrade pip"

# Others

alias reload="source ~/.bash_profile"
alias tint2r="killall -SIGUSR1 tint2"
